{
	"directories": [
		{
			"path": "templates",
			"filesRegExp": "^.*\\.vue$",
			"searchSubdirectories": true,
			"fields": {
				"title": {
					"source": "filename",
					"prefix": "$:/plugins/{{ plugin_author }}/${pluginname}/templates/"
				},
				"hide-body": "yes"
			}
		},
		{
			"path": "plugins",
			"filesRegExp": "^.*\\.js$",
			"searchSubdirectories": true,
			"fields": {
				"title": {
					"source": "filename",
					"prefix": "$:/plugins/{{ plugin_author }}/${pluginname}/plugins/"
				},
				"module-type": "library",
				"type": "application/javascript"
			}
		},
		{
			"path": "components",
			"filesRegExp": "^.*\\.js$",
			"searchSubdirectories": true,
			"fields": {
				"title": {
					"source": "filename",
					"prefix": "$:/plugins/{{ plugin_author }}/${pluginname}/components/"
				},
				"module-type": "library",
				"type": "application/javascript"
			}
		}
	]
}